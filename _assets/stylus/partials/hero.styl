.hero
  background url('/images/hero.jpg') no-repeat center center
  background-size cover
  height 100vh

  &__inner
    height 100%
    center($containerWidth)
    grid('row','center','end')

  &__content
    cell(1,2)

  &__heading
    font-size rem-calc(78)
    margin-bottom rem-calc(10)
    font-weight bold
    em
      color $blue

  &__subheading
    font-size rem-calc(18)
    line-height 1.6
    width 75%

  &__button
    display inline-block
    background rgba($white, .75)
    padding rem-calc(12)
    color $black
    font-weight 600
    font-size rem-calc(22)
    margin rem-calc(18) rem-calc(6)
    &:first-of-type
      margin-left 0
